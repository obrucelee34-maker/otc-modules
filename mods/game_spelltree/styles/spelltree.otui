  UIWidget
    id: pointsSeparator
    image-source: /images/ui/windows/spelltree/points_separator
    margin-left: 8
    margin-right: 8

  UIWidget
    size: 24 24
    margin-bottom: 3
    margin-top: 3
    id: skillPointsIcon
    image-source: /images/ui/windows/spelltree/skill_points_icon
