GameSpellTreeLegacySkillPointsTooltip < UIWidget
  size: 300 200
  image-source: /images/ui/windows/tooltip/dark_background
  image-border: 10
  layout:
    type: verticalBox
    fit-children: true
  
  UIWidget
    id: legacy_skill_points
    size: 300 100
    padding: 20
    layout:
      type: verticalBox
      fit-children: true

    GameSpellTreeSkillPointsTooltipContentCategoryLegacySkillPoints
    UIWidget
      font: poppins-14
      text-auto-resize: true
      text-wrap: true
      text-align: left
      text-color: #CED2D9
      !text: tr('You receive 1 Legacy Skill Point each new level past Legacy Level 75. Legacy Skill Points are used to learn Legacy Skills, which are permanent. Upon changing or resetting Archetypes, those Skill Points will remain there.')
      margin-bottom: 20
    
    GameSpellTreeSkillPointsTooltipContentSeparator
    GameSpellTreeSkillPointsTooltipContentBottom

