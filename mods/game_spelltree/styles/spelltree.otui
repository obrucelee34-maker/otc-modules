      GameSpellTree:displaySkillPointsTooltip(self, self:isHovered())

  Label
    id: skillPointsLabel
    size: 30 24
    font: poppins-semibold-16
    text-align: center
    text-offset: 0 3
    text: 0

  UIWidget
    id: pointsSeparator
    image-source: /images/ui/windows/spelltree/points_separator
    margin-left: 8
    margin-right: 8

  UIWidget
    size: 24 24
    margin-bottom: 3
    margin-top: 3
    id: legacySkillPointsIcon
    image-source: /images/ui/windows/spelltree/legacy_points_icon
    image-auto-resize: false
    @onHoverChange: |
      GameSpellTree:displayLegacySkillPointsTooltip(self, self:isHovered())

  Label
    id: legacySkillPointsLabel
    size: 30 24
    phantom: true
    font: poppins-semibold-16
    text-align: center
    text-offset: 0 3
    text: 0

