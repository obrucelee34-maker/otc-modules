TopPanel < Panel
  image-source: /images/ui/windows/spelltree/top_panel
  padding: 1 1 1 1
  anchors.top: parent.top
  anchors.left: parent.left
  anchors.right: parent.right

  Panel
    id: classNamePanel
    padding: 5 22 5 22
    anchors.top: parent.top
    anchors.left: parent.left
    image-source: /images/ui/windows/spelltree/class_name_panel

    UIWidget
      id: effectiveLevel
      padding: 3 3 3 3
      image-border: 5
      anchors.right: parent.right
      anchors.verticalCenter: parent.verticalCenter
      text-align: center
      text-offset: 0 4
      text-auto-resize: true
      font: poppins-semibold-15
      image-source: /images/ui/windows/spelltree/effective_level_panel
      text: NaN
      @onGeometryChange: function(self) self:setWidth(math.max(43, self:getWidth())) self:setHeight(math.max(42, self:getHeight())) end

    Label
      id: className
      anchors.fill: parent
      anchors.right: prev.left
      text-align: left
      text-offset: 0 4
      font: poppins-semibold-27
      text: Unknown

  UIWidget
    id: infoIcon
    anchors.verticalCenter: classNamePanel.verticalCenter
    anchors.horizontalCenter: classNamePanel.right
    image-source: /images/ui/windows/spelltree/info_icon

  Panel
    id: archetypesPanel
    anchors.left: infoIcon.left
    anchors.right: parent.right
    anchors.top: parent.top
    anchors.bottom: parent.bottom
    margin-left: 41
    margin-right: 25
    margin-top: 10
    layout:
      type: horizontalBox
      spacing: 37

    SpellTreeMenuButton
      id: archery
      &tooltip: tr("Archery")

    SpellTreeMenuButton
      id: holy
      &tooltip: tr("Holy")

    SpellTreeMenuButton
      id: protection
      &tooltip: tr("Protection")

    SpellTreeMenuButton
      id: shadow
      &tooltip: tr("Shadow")

    SpellTreeMenuButton
      id: spiritual
      &tooltip: tr("Spiritual")

    SpellTreeMenuButton
      id: warfare
      &tooltip: tr("Warfare")

    SpellTreeMenuButton
      id: witchcraft
      &tooltip: tr("Witchcraft")

    SpellTreeMenuButton
      id: wizardry
      &tooltip: tr("Wizardry")


PointsPanel < Panel
  id: pointsPanel
  size: 291 40
  padding: 5
  padding-left: 12
  padding-right: 12
  image-source: /images/ui/windows/spelltree/skill_points_bg
  anchors.left: parent.left
  anchors.bottom: parent.bottom
  layout:
    type: horizontalBox
    fit-children: true
    spacing: 2

  UIWidget
    size: 24 24
    text-auto-resize: true
    text-offset: 0 3
    font: poppins-semibold-14
