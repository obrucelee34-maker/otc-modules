GamePromptsCloseButton < UIWidget
  id: close_button
  anchors.top: parent.top
  anchors.right: parent.right
  margin: 3
  size: 25 25
  image-source: /images/ui/windows/base_window/close_button
  $checked:
    image-source: /images/ui/windows/base_window/minimized_button
  $hover !checked:
    image-source: /images/ui/windows/base_window/close_button_active
  $hover checked:
    image-source: /images/ui/windows/base_window/minimized_button_active
  $pressed !checked:
    image-source: /images/ui/windows/base_window/close_button
  $pressed checked:
    image-source: /images/ui/windows/base_window/minimized_button
  @onClick: |
    local env = self:getParent().env
    if not env then
      return
    end
    GamePrompts:cancelPrompt(env)

GamePromptsMiddleCloseButton < GamePromptsCloseButton
  size: 45 25
  image-source: /images/ui/windows/prompts/close_button
  $hover !checked:
    image-source: /images/ui/windows/prompts/close_button_active
  $pressed !checked:
    image-source: /images/ui/windows/prompts/close_button