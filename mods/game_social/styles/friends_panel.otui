GameSocialHorizontalSeparator < HorizontalSeparator
  background-color: #3A3D43

GameSocialFriendsPanel < UIWidget
  id: friends_panel
  anchors.fill: parent

  MainWindowScrollableContentScrollBar
    margin-right: 10
  MainWindowScrollableContent
    anchors.top: parent.top
    anchors.left: parent.left
    anchors.right: parent.right
    anchors.bottom: add_friend_button.top
    margin-bottom: 10
    margin-right: 0
    padding-left: 0
    padding-top: 0
    padding-bottom: 0
    padding-right: 0
    layout:
      type: verticalBox
      spacing: 10
    //GameSocialFriendsPanelOnlineStatusPanel
    GameSocialFriendsPanelRequestsPanel
      padding-right: 28
    GameSocialFriendsPanelOnlinePanel
      padding-right: 28
    GameSocialFriendsPanelOfflinePanel
      padding-right: 28
    GameSocialFriendsPanelIgnoredPanel
      padding-right: 28

  GameSocialHorizontalSeparator
    anchors.left: parent.left
    anchors.right: parent.right
    anchors.bottom: add_friend_button.top
    margin-bottom: 10
    margin-right: 0
    margin-left: -28
    height: 1

  PrimaryButton
    id: add_friend_button
    text: Add Friend
    width: 160
    margin-bottom: 10
    anchors.bottom: parent.bottom
    anchors.left: parent.left
    margin-left: 25

    &iconPath: '/images/ui/windows/social/add_friend_icon'
    &iconAlign: left
    &iconOffset: '20 0'
    &textMarginLeft: 25 
    @onClick: |
      GameSocial:onAddFriendButtonClicked()

  Button
    id: refer_friend_button
    &color: '#FBFB79'
    text: Refer a Friend
    width: 180
    margin-bottom: 10
    anchors.bottom: parent.bottom
    anchors.right: parent.right
    margin-right: 30
    &iconPath: '/images/ui/windows/social/refer_a_friend'
    &iconAlign: left
    &iconOffset: '20 0'
    &textMarginLeft: 25
    @onClick: |
      g_platform.openUrl('https://ravendawn.online/myaccount/refer-a-friend')

GameSocialFriendsPanelOnlineStatusPanel < UIWidget
  id: online_status_panel
  height: 30
  @onSetup: |
    addEvent(function()
      local width = 0
      for _, child in ipairs(self:getChildren()) do
        width = width + child:getWidth() + child:getMarginLeft() + child:getMarginRight()
      end

      self.icon:setMarginLeft((self:getWidth() - width) / 2)
    end)

  UIWidget
    id: icon
    anchors.verticalCenter: parent.verticalCenter
    anchors.left: parent.left
    size: 17 17
    image-source: /images/ui/windows/social/online_icon
    $on !checked:
      // online, same channel
      image-color: #77d463
    $!on checked:
      // away / dont disturb
      image-color: #d46363
    $!on !checked:
      // offline / hidden
      image-color: #b8b8b8
    $on checked:
      // online, different channel
      image-color: #fbfb79
  
  UIWidget
    id: arrow
    anchors.verticalCenter: parent.verticalCenter
    anchors.left: next.right
    margin-left: 10
    image-source: /images/ui/windows/social/arrow_down
    size: 12 10
    $on:
      image-source: /images/ui/windows/social/arrow_up

  UIWidget
    id: text
    anchors.verticalCenter: parent.verticalCenter
    anchors.left: icon.right
    margin-left: 10
    font: poppins-semibold-14
    text-color: #b8b8b8
    text-auto-resize: true
    text: Status: Offline
    @onTextChange: |
      local parent = self:getParent()
      local width = 0
      for _, child in ipairs(parent:getChildren()) do
        width = width + child:getWidth() + child:getMarginLeft() + child:getMarginRight()
      end
      parent:setWidth(width)

GameSocialFriendsPanelRequestsPanel < UIWidget
  id: request_panel
  height: 26
  &minHeight: 26

  UIWidget
    id: arrow
    anchors.top: parent.top
    anchors.left: parent.left
    size: 26 26
    image-source: /images/ui/windows/base_window/close_button_up
    $on:
      image-source: /images/ui/windows/base_window/close_button_down
    $hover on:
      image-source: /images/ui/windows/base_window/close_button_down_active
    $hover !on:
      image-source: /images/ui/windows/base_window/close_button_up_active
    @onClick: |
      self:setOn(not self:isOn())
    @onStateChange: |
      local parent = self:getParent()
      if not parent:isOn() then
        parent:setHeight(parent.minHeight)
        parent:setOn(true)
      else
        parent:setHeight(parent.maxHeight)
        parent:setOn(false)
      end

  UIWidget
    id: title
    anchors.verticalCenter: arrow.verticalCenter
    anchors.left: arrow.right
    margin-left: 10
    font: poppins-semibold-14
    text-color: #b8b8b8
    text-auto-resize: true
    text: Requests
  
  GameSocialHorizontalSeparator
    anchors.verticalCenter: arrow.verticalCenter
    anchors.left: title.right
    anchors.right: next.left
    margin-left: 15
    margin-right: 15
    height: 2

  UIWidget
    id: counter
    anchors.verticalCenter: arrow.verticalCenter
    anchors.right: parent.right
    image-source: /images/ui/windows/social/count_background
    size: 26 26
    font: poppins-semibold-14
    text-color: #ffffff
    text-offset: 0 2
    text: 0

  UIWidget
    id: list
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    padding-left: 36
    &setup: |
      function(self)
        local height = 0
        for _, child in ipairs(self:getChildren()) do
          height = height + child:getHeight() + child:getMarginTop() + child:getMarginBottom() + self:getLayout():getSpacing()
        end

        self:setHeight(height)
        local parent = self:getParent()
        parent:setHeight(height + parent.minHeight)
        parent.maxHeight = parent:getHeight()
      end
    @onSetup: |
      addEvent(function()
        self:setup()
      end)
    layout:
      type: verticalBox

