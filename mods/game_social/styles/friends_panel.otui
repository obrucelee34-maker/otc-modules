GameSocialFriendsPanelFriendButton < UIWidget
  opacity: 1.0
  image-color: #FFFFFF
  $hover:
    image-color: #36F991
  $pressed:
    opacity: 0.7
  $!on:
    opacity: 0
  @onSetup: |
    local width = self:getImageTextureWidth()
    local height = self:getImageTextureHeight()
    self:setSize({width = width, height = height})
    self:setImageSize({width = width, height = height})
    self:setMarginTop(self:getParent():getHeight() - height)
  @onHoverChange: |
    function(self, hovered)
      signalcall(UIWidget.onHoverChange, self, hovered)
      self:getParent():getParent():setOn(hovered)
      self:getParent():setOn(hovered)
    end

GameSocialFriendsPanelFriend < UIWidget
  $first:
    margin-top: 5
  height: 37
  image-color: alpha
  image-source: /images/ui/windows/social/friend_background
  image-rect: -64 0 448 37
  $hover:
    image-color: white
  $on:
    image-color: white
  @onHoverChange: |
    function(self, hovered)
      self.options_panel:setOn(hovered)
      if hovered then
        -- bring scrollbar to front
        self:getParent():getParent():getParent():getParent():getChildById('main_window_scrollbar'):raise()
      end
    end

  UIWidget
    id: icon
    anchors.verticalCenter: parent.verticalCenter
    anchors.left: parent.left
    size: 16 16
    image-source: /images/ui/windows/social/online_icon
    phantom: true
    $on !checked:
      // online, same channel
      image-color: #77d463
    $!on checked:
      // away / dont disturb
      image-color: #d46363
    $!on !checked:
      // offline / hidden
      image-color: #b8b8b8
    $on checked:
      // online, different channel
      image-color: #fbfb79

  UIWidget
    id: name
    &ignoreTr: true
    anchors.top: parent.top
    anchors.bottom: parent.bottom
    anchors.left: icon.right
    margin-left: 10
    font: poppins-semibold-14
    text-offset: 0 3
    text-color: #b8b8b8
    text-auto-resize: true
    text: Name
    text-align: center
    phantom: true

  UIWidget
    id: options_panel
    anchors.verticalCenter: parent.verticalCenter
    anchors.right: parent.right
    size: 135 37
    phantom: true
    layout:
      type: horizontalBox
      spacing: 10
      align-right: true
    @onStateChange: |
      for _, child in ipairs(self:getChildren()) do
        child:setOn(self:isOn())
      end

    @onHoverChange: |
      function(self, hovered)
        self:setOn(hovered)
      end

    GameSocialFriendsPanelFriendButton
      id: channel_swap_button
      image-source: /images/ui/windows/social/channel_change_icon
      margin-right: 15
      &tooltip: 'Swap Channel'
      @onClick: |
        modules.game_social.GameSocial:onChannelSwapButtonClicked(self:getParent():getParent())

    GameSocialFriendsPanelFriendButton
      id: party_invite_button
      image-source: /images/ui/windows/social/create_party_icon
      margin-right: 15
      &tooltip: 'Invite to Party'
      @onClick: |
        modules.game_social.GameSocial:invitePlayer(self:getParent():getParent():getChildById('name'):getText())

    GameSocialFriendsPanelFriendButton
      id: whisper_button
      image-source: /images/ui/windows/social/whisper_icon
      margin-right: 15
      &tooltip: 'Private Message'
      @onClick: |
        modules.game_social.GameSocial:onWhisperButtonClicked(self:getParent():getParent())

    GameSocialFriendsPanelFriendButton
      id: remove_button
      image-source: /images/ui/windows/social/remove_icon
      margin-right: 15
      &tooltip: 'Remove Friend'
      @onClick: |
        modules.game_social.GameSocial:onRemoveFriendButtonClicked(self:getParent():getParent())

