TargetHudBar < UITargetBar
  size: 306 26
  phantom: true

  Panel
    id: background
    anchors.centerIn: parent
    anchors.left: parent.left
    $on:
      image-source: /images/ui/windows/targethud/background
    $!on:
      image-source: /images/ui/windows/targethud/circle_background

  Panel
    id: fill
    image-source: /images/ui/windows/targethud/bar_fill
    anchors.left: parent.left
    anchors.verticalCenter: parent.verticalCenter
    margin-left: 12

  Panel
    id: glow
    image-source: /images/ui/windows/targethud/bar_border
    anchors.right: fill.right
    anchors.verticalCenter: fill.verticalCenter

  Panel
    id: frame
    height: 23
    image-source: /images/ui/windows/targethud/bar_overlay
    anchors.verticalCenter: parent.verticalCenter
    anchors.left: parent.left
    anchors.right: parent.right
    margin-right: 13
    margin-top: 1

  Panel
    id: frame_left
    image-source: /images/ui/windows/targethud/circle_border_left
    anchors.verticalCenter: parent.verticalCenter
    anchors.left: parent.left
    margin-left: -6
    size: 37 37
    image-source: /images/ui/windows/targethud/circle_border_left

  UICreature
    id: portrait
    size: 24 24
    clipping: true
    anchors.centerIn: prev
    outfit-direction: 2
    phantom: true
    circle: true
  
  Panel
    id: frame_glow_overlay
    size: 40 40
    image-source: /images/ui/windows/targethud/circle_glow
    anchors.centerIn: prev

  Panel
    id: frame_overlay
    size: 36 36
    image-source: /images/ui/windows/targethud/circle_overlay
    anchors.centerIn: prev

  Panel
    id: frame_right
    size: 19 31
    image-source: /images/ui/windows/targethud/border_right
    anchors.verticalCenter: parent.verticalCenter
    anchors.left: frame.right
    margin-top: 1
    margin-left: -7

  Panel
    id: name
    anchors.centerIn: parent
    text-vertical-auto-resize: true
    width: 150
    font: poppins-semibold-bordered-12
    text-offset: 0 1
    margin-top: 1
    text: Name

  UIWidget
    id: icon
    size: 24 24
    anchors.right: parent.right
    anchors.verticalCenter: parent.verticalCenter
    margin-right: 6

TargetHudBarPanel < Panel
  size: 536 86
  draggable: true
  phantom: false

  EditModePanel
    &title: 'Target UI'

  Panel
    id: content
    anchors.fill: parent
    phantom: true

    AggroHolderHudBar
      id: aggroHolderHudBar
      anchors.verticalCenter: parent.verticalCenter
      anchors.left: parent.left

    TargetHudAggroTop
      id: main_aggro
      anchors.horizontalCenter: targetHudBar.horizontalCenter
      anchors.bottom: targetHudBar.top
      margin-bottom: -3

    TargetHudAggroRight
      id: highest_aggro
      anchors.left: targetHudBar.right
      anchors.verticalCenter: targetHudBar.verticalCenter
      margin-left: -10

    TargetHudBar
      id: targetHudBar
      anchors.left: aggroHolderHudBar.right
      anchors.verticalCenter: parent.verticalCenter
      margin-left: -8

    Panel
      id: statusIcons
      anchors.left: targetHudBar.left
      anchors.top: targetHudBar.bottom
      height: 19
      margin-top: 6
      margin-left: 10
      layout:
        type: horizontalBox
        spacing: 3
        fit-children: true