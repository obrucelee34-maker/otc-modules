TargetHudStatusIcon < UIWidget
  size: 19 19
  image-size: 19 19
  image-source: /images/ui/windows/targethud/icon_bg
  phantom: true

  UIWidget
    anchors.centerIn: parent
    size: 18 17
    image-source: /images/ui/windows/targethud/icon_frame

  UIWidget
    id: icon
    anchors.centerIn: parent
    size: 15 15

  UIWidget
    id: text
    anchors.bottom: parent.bottom
    anchors.right: parent.right
    margin-bottom: -3
    text-auto-resize: true

AggroHolderHudBar < UIHealthBar
  size: 87 23
  phantom: true
  visible: false
  margin-top: 1

  Panel
    id: background
    anchors.fill: parent
    image-source: /images/ui/windows/targethud/aggro_holder_background
    image-border: 5

  Panel
    id: separators
    anchors.fill: parent
    margin-bottom: 2
    margin-left: 9
    margin-right: 9
    image-source: /images/ui/windows/health_bars/party/border_overlay
    image-border: 5

  UIHealthBar
    id: health
    anchors.fill: separators
    margin-right: 15

    Panel
      id: bar
      anchors.fill: parent
      margin-top: 3
      margin-bottom: 2
      image-source: /images/ui/windows/health_bars/party/health_fill

    Panel
      id: border
      anchors.left: prev.left
      anchors.top: prev.top
      anchors.bottom: prev.bottom
      image-source: /images/ui/windows/health_bars/party/health_border

  Panel
    id: name
    font: poppins-semibold-bordered-12
    height: 15
    anchors.verticalCenter: health.verticalCenter
    anchors.left: parent.left
    anchors.right: pareint.right
    margin-top: 1
    margin-left: 15
    text-color: #FFFFFF
    text-auto-resize: true
    
  Panel
    id: border_left
    anchors.top: parent.top
    anchors.bottom: parent.bottom
    anchors.left: parent.left
    margin-top: -1
    image-source: /images/ui/windows/targethud/aggro_holder_border_left

