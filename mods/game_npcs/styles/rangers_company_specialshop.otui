RangersCompanyShopItem < UIWidget
  id: item
  height: 65
  image-border: 5
  phantom: false
  disabled: false

  $on:
    image-source: /images/ui/windows/npcs/main/BgGeneralIconActive
  $!on:
    image-source: /images/ui/windows/npcs/main/BgGeneralIcon

  @onEnableChange: |
    for _, child in ipairs(self:getChildren()) do
      child:setEnabled(self:isEnabled())
    end

  Item
    id: item
    size: 46 46
    image-source: /images/ui/windows/npcs/main/BgIcon
    anchors.left: parent.left
    anchors.verticalCenter: parent.verticalCenter
    margin-left: 8
    virtual: true
    phantom: false
    @onClick: |
      local parent = self:getParent()
      parent:onClick()

  GameItemShopPoppins14px
    id: name
    text-color: white
    text-offset: 0 3
    anchors.top: item.top
    anchors.left: prev.right
    anchors.right: parent.right
    height: 20
    margin-top: 2
    margin-left: 10
    margin-right: 10
    phantom: false
    text-wrap: false
    text-auto-resize: true
    @onTextChange: |
      self:setTooltip(self:getText())
    @onClick: |
      local parent = self:getParent()
      parent:onClick()

    $!disabled:
      text-color: white
    $disabled:
      text-color: #7F7F7F

  Panel
    id: silver_icon
    size: 12 12
    image-source: /images/ui/icons/silver_24
    anchors.bottom: item.bottom
    anchors.left: prev.left
    margin-bottom: 2
    margin-left: 0

  GameItemShopPoppins12px
    id: silver_price
    text: 0
    text-auto-resize: true
    text-offset: 0 3
    anchors.verticalCenter: prev.verticalCenter
    anchors.left: prev.right
    margin-left: 5
    phantom: true
    $!disabled:
      text-color: white
    $disabled:
      text-color: #7F7F7F
    @onTextChange: |
      local number = tonumber(self:getText())
      if number then
        self._internal_value = number
        self:setText(FormatCommaNumber(number), true)
      end

  Panel
    id: bounty_icon
    size: 12 12
    image-source: /images/ui/windows/rangers_company/icon_bounty_mark
    anchors.bottom: item.bottom
    anchors.left: silver_price.right
    margin-bottom: 2
    margin-left: 10

  GameItemShopPoppins12px
    id: bounty_price
    text: 0
    text-auto-resize: true
    text-offset: 0 3
    anchors.verticalCenter: prev.verticalCenter
    anchors.left: prev.right
    margin-left: 5
    phantom: true
    $!disabled:
      text-color: white
    $disabled:
      text-color: #7F7F7F

RangersCompanySpecialShopRankPanel < UIWidget
  id: category_panel
  height: 40
  &shrinkedHeight: 40
  &expandedHeight: 40
  &expanded: false

  @onClick: |
    if self.expanded then
      self.expanded = false
      self:setHeight(self.shrinkedHeight)
      self.list:setVisible(false)
      self.toggle_button:setOn(false)
    else
      self.expanded = true
      self:setHeight(self.expandedHeight)
      self.list:setVisible(true)
      self.toggle_button:setOn(true)
    end

  UIWidget
    id: name
    anchors.left: parent.left
    anchors.top: parent.top
    text-auto-resize: true
    margin-left: 15
    font: poppins-14
    text-color: #ffffff
    phantom: true
    text-align: left
    text: name
    margin-top: 3

  UIWidget
    id: limit_square_box
    image-source: /images/ui/windows/rangers_company/rounded_square_box
    size: 50 25
    anchors.verticalCenter: name.verticalCenter
    anchors.left: name.right
    margin-left: 20
    text: 0/0
    font: poppins-14
    text-offset: 0 4

  UIWidget
    id: clock_text
    anchors.right: parent.right
    anchors.verticalCenter: name.verticalCenter
    font: poppins-semibold-14
    color: #FFA851
    focusable: false
    phantom: true
    text: 23:59:59
    margin-right: 15
    text-offset: 0 1
    text-auto-resize: true

  UIWidget
    id: clock_icon
    image-source: /images/ui/windows/aether_rift/icon_clock
    anchors.right: clock_text.left
    anchors.verticalCenter: clock_text.verticalCenter
    margin-right: 8
    color: #FFA851
    focusable: false
    phantom: true

  UIWidget
    id: lock_icon
    anchors.left: name.right
    phantom: true
    anchors.verticalCenter: name.verticalCenter
    margin-left: 20
    size: 16 16
    visible: true
    image-source: /images/ui/windows/spelltree/lock

  // @TODO: remove toggle_button
  UIWidget
    id: toggle_button
    anchors.right: parent.right
    anchors.verticalCenter: name.verticalCenter
    margin-right: 20
    visible: false
    size: 25 25
    image-source: /images/ui/windows/base_window/close_button_up
    $on:
      image-source: /images/ui/windows/base_window/close_button_down
    $hover on:
      image-source: /images/ui/windows/base_window/close_button_down_active
    $hover !on:
      image-source: /images/ui/windows/base_window/close_button_up_active
    @onClick: |
      local parent = self:getParent()
      parent:onClick()
  
  UIWidget
    id: separator
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    height: 1
    background-color: #3A3D43
    margin-top: 10
  
  UIWidget
    id: list
    anchors.left: parent.left
    anchors.right: parent.right
    anchors.top: separator.bottom
    anchors.bottom: parent.bottom
    margin-top: 15
    layout:
      type: grid
      num-columns: 2
      cell-spacing: 15 15
      cell-size: 245 70

    &update: |
      function(self)
        local parent = self:getParent()
        local itemsHeight = 40
        local visibleCount = 0
        for index, item in pairs(self:getChildren()) do
          if not item.hidden then
            visibleCount = visibleCount + 1
            if visibleCount % 2 == 1 then
              itemsHeight = itemsHeight + item:getHeight() + 15
            end
          end
        end
        parent.expandedHeight = itemsHeight
      end

    @onSetup: |
      self:update()

