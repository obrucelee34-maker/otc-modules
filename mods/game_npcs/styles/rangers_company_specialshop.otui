GameRangersCompanySpecialShopPanel < Panel
  id: gameRangersCompanyShopPanel
  anchors.fill: parent

  Panel
    id: filterPanel
    height: 40
    anchors.left: parent.left
    anchors.right: parent.right
    anchors.top: parent.top
    margin: 8
    margin-left: 18
    margin-right: 18
    image-source: /images/ui/windows/npcs/main/search_background
    image-border: 4

    UIWidget
      id: search_icon
      phantom: true
      focusable: false
      image-source: /images/ui/windows/rangers_company/search_icon
      margin-left: 8
      size: 14 14
      anchors.left: parent.left
      anchors.verticalCenter: parent.verticalCenter
    
    UIWidget
      id: placeholder
      font: poppins-14
      !text: tr('Search item...')
      text-align: left
      text-offset: 0 5
      color: #5B5B5B
      opacity: 0.6
      anchors.fill: parent
      anchors.left: search_icon.right
      phantom: true
      margin-left: 10
      margin-bottom: 2

    UITextEdit
      id: textEdit
      height: 40
      font: poppins-14
      padding: 10
      text-align: left
      text-offset: 0 5
      selection-color: #272727
      selection-background-color: #cccccc
      color: #5B5B5B
      anchors.verticalCenter: parent.verticalCenter
      anchors.left: search_icon.right
      anchors.right: parent.right

      @onTextChange: |
        RangersCompanySpecialShop:onSearchFilter(self)

  Panel
    id: bottomPanel
    image-source: /images/ui/windows/npcs/main/BgSelectQuest
    anchors.left: parent.left
    anchors.right: parent.right
    anchors.bottom: parent.bottom
    padding: 15

    $on checked:
      height: 310
    $on !checked:
      height: 260
    $!on:
      height: 0

    RangersCompanyShopItemInfo
      id: shopItemInfo
      anchors.top: parent.top
      anchors.horizontalCenter: parent.horizontalCenter
      margin-top: 15

    UIWidget
      id: itemQuality
      height: 50
      anchors.top: prev.bottom
      anchors.left: prev.left
      anchors.right: prev.right
      margin-top: 15

      $on:
        height: 50
      $!on:
        height: 0

      GameItemShopPoppinsBold14px
        anchors.verticalCenter: parent.verticalCenter
        anchors.left: parent.left
        text-offset: 0 -1
        text: Quality

      ComboBox
        id: comboBox
        font: poppins-14
        width: 165
        anchors.verticalCenter: parent.verticalCenter
        anchors.right: parent.right

    GameNpcHorizontalSeparator
      margin-top: 15

    RangersCompanyShopItemInfoLabel
      id: silver
      anchors.top: prev.bottom
      anchors.horizontalCenter: prev.horizontalCenter
      margin-top: 15

      @onSetup: |
        self:getChildById('text'):setText('Your Coins')
      
      @onTextChange: |
        local number = tonumber(self:getText())
        if number then
          self._internal_value = number
          self:setText(FormatCommaNumber(number), true)
        end

    RangersCompanyShopItemInfoLabel
      id: cost
      anchors.top: prev.bottom
      anchors.horizontalCenter: prev.horizontalCenter
      margin-top: 5
      margin-left: 39

      @onSetup: |
        self:getChildById('text'):setText('Total')

      @onTextChange: |
        local number = tonumber(self:getText())
        if number then
          self._internal_value = number
          self:setText(FormatCommaNumber(number), true)
        end

    Button
      id: buyButton
      width: 110
      anchors.top: prev.bottom
      anchors.horizontalCenter: parent.horizontalCenter
      margin-top: 20
      &color: '#77d463'
      text: Buy
      @onClick: ItemShop:buyItem()
