CulledEyesShopItem < UIWidget
  id: item
  height: 65
  image-border: 5
  phantom: false
  disabled: false

  $on:
    image-source: /images/ui/windows/npcs/main/BgGeneralIconActive
  $!on:
    image-source: /images/ui/windows/npcs/main/BgGeneralIcon

  @onEnableChange: |
    for _, child in ipairs(self:getChildren()) do
      child:setEnabled(self:isEnabled())
    end

  Item
    id: item
    size: 46 46
    image-source: /images/ui/windows/npcs/main/BgIcon
    anchors.left: parent.left
    anchors.verticalCenter: parent.verticalCenter
    margin-left: 8
    virtual: true
    phantom: false
    @onClick: |
      local parent = self:getParent()
      parent:onClick()

  GameItemShopPoppins14px
    id: name
    text-color: white
    text-offset: 0 3
    anchors.top: item.top
    anchors.left: prev.right
    anchors.right: parent.right
    height: 20
    margin-top: 2
    margin-left: 10
    margin-right: 10
    phantom: false
    text-wrap: false
    text-auto-resize: true
    @onTextChange: |
      self:setTooltip(self:getText())
    @onClick: |
      local parent = self:getParent()
      parent:onClick()

    $!disabled:
      text-color: white
    $disabled:
      text-color: #7F7F7F

  Panel
    id: dawn_essence_icon
    size: 12 12
    image-source: /images/ui/windows/premium_store/icon_purchase_dawn_essence
    anchors.bottom: item.bottom
    anchors.left: prev.left
    margin-bottom: 2
    margin-left: 0

  GameItemShopPoppins12px
    id: dawn_essence_price
    text: 0
    text-auto-resize: true
    text-offset: 0 3
    anchors.verticalCenter: prev.verticalCenter
    anchors.left: prev.right
    margin-left: 5
    phantom: true
    $!disabled:
      text-color: white
    $disabled:
      text-color: #7F7F7F

  Panel
    id: experience_icon
    size: 12 12
    image-source: /images/ui/icons/experience
    anchors.verticalCenter: prev.verticalCenter
    anchors.left: prev.right
    margin-left: 5

  GameItemShopPoppins12px
    id: experience
    text: 0
    text-auto-resize: true
    text-offset: 0 3
    anchors.verticalCenter: prev.verticalCenter
    anchors.left: prev.right
    margin-left: 5
    phantom: true
    $!disabled:
      text-color: white
    $disabled:
      text-color: #7F7F7F

CulledEyesShopRankPanel < UIWidget
  id: rank_panel
  height: 40
  &shrinkedHeight: 40
  &expandedHeight: 40
  &expanded: false

  @onClick: |
    if self.expanded then
      self.expanded = false
      self:setHeight(self.shrinkedHeight)
      self.list:setVisible(false)
      self.toggle_button:setOn(false)
    else
      self.expanded = true
      self:setHeight(self.expandedHeight)
      self.list:setVisible(true)
      self.toggle_button:setOn(true)
    end

  UIWidget
    anchors.top: parent.top
    anchors.left: parent.left
    anchors.right: parent.right
    height: 40
    background-color: #1a1a1a80
    phantom: true

  UIWidget
    id: name
    anchors.left: parent.left
    anchors.top: parent.top
    text-auto-resize: true
    margin-left: 20
    margin-top: 12
    font: poppins-semibold-14
    text-color: #a6aab2
    phantom: true
    $on:
      text-color: #77d463
    text-align: left
    text: Rank 1 - Recruit

  UIWidget
    id: lock_icon
    anchors.left: name.right
    phantom: true
    anchors.verticalCenter: name.verticalCenter
    margin-left: 20
    size: 16 16
    visible: false
    image-source: /images/ui/windows/spelltree/lock

  UIWidget
    id: toggle_button
    anchors.right: parent.right
    anchors.verticalCenter: name.verticalCenter
    margin-right: 20
    size: 25 25
    image-source: /images/ui/windows/base_window/close_button_up
    $on:
      image-source: /images/ui/windows/base_window/close_button_down
    $hover on:
      image-source: /images/ui/windows/base_window/close_button_down_active
    $hover !on:
      image-source: /images/ui/windows/base_window/close_button_up_active
    @onClick: |
      local parent = self:getParent()
      parent:onClick()
  
  UIWidget
    id: list
    anchors.left: parent.left
    anchors.right: parent.right
    anchors.top: toggle_button.bottom
    anchors.bottom: parent.bottom
    margin-top: 20
    layout:
      type: grid
      num-columns: 2
      cell-spacing: 15 15
      cell-size: 235 65

    &update: |
      function(self)
        local parent = self:getParent()
        local itemsHeight = 40
        local visibleCount = 0
        for index, item in pairs(self:getChildren()) do
          if not item.hidden then
            visibleCount = visibleCount + 1
            if visibleCount % 2 == 1 then
              itemsHeight = itemsHeight + item:getHeight() + 15
              item:setMarginLeft(20)
            else
              item:setMarginLeft(0)
            end
          end
        end
        parent.expandedHeight = itemsHeight
      end

    @onSetup: |
      self:update()

