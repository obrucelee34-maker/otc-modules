  Panel
    id: icon
    size: 18 18
    image-source: /images/ui/windows/rangers_company/icon_bounty_mark
    anchors.verticalCenter: prev.verticalCenter
    anchors.left: prev.right
    margin-left: 25

  GameItemShopPoppinsBold12px
    id: bounty_price
    text: 0
    text-auto-resize: true
    //text-align: center
    text-offset: 0 2
    anchors.verticalCenter: prev.verticalCenter
