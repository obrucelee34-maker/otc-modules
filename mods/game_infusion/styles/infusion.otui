GameInfusionSlotPanelItem < UIWidget
  height: 53
  image-source: /images/ui/windows/infusion/infusion_background
  image-border: 15
  padding: 7
  @onStateChange: |
    local state = self:isOn()
    self.name:setOn(state)
    self.description:setOn(state)
    if not state then
      self.exp:setText('0')
      self.cost:setText('0')
    end

  Item
    id: item
    anchors.left: parent.left
    anchors.verticalCenter: parent.verticalCenter
    draggable: false
    size: 42 42

  UIWidget
    id: name
    anchors.left: item.right
    anchors.top: item.top
    text-auto-resize: true
    margin-left: 15
    font: poppins-semibold-16
    text-color: #a6aab2
    margin-top: 3
    anchors.verticalCenter: none
    $on:
      margin-top: 0
      text-color: #e3e3e3
      anchors.verticalCenter: parent.verticalCenter
    @onSetup: |
      self:setText(self:getParent():getId():gsub('slot_', 'Slot '):titleCase())
    @onStateChange: |
      if not self:isOn() then
        self:setText(self:getParent():getId():gsub('slot_', 'Slot '):titleCase())
      else
        self:setText(self:getParent().item:getItem():getName():titleCase())
      end

  UIWidget
    id: description
    anchors.left: item.right
    anchors.bottom: item.bottom
    text-auto-resize: true
    text: Item or infusion artifacts
    margin-left: 15
    font: poppins-semibold-12
    text-color: #696d75
    margin-bottom: 3
    visible: true
    $on:
      visible: false

  UIWidget
    id: exp
    anchors.top: parent.top
    anchors.right: parent.right
    size: 80 20
    text-auto-resize: true
    font: poppins-semibold-13
    text-color: #a6aab2
    visible: false
    $on:
      text-color: #67b15a
      visible: true
    text: 0
    margin-top: 4
    margin-right: 25
    @onTextChange: |
      self:setText(string.format('%s%s', tonumber(self:getText()) > 0 and '+' or '', self:getText()), true)
      self:setOn(self:getText() ~= '0')
  
  UIWidget
    anchors.left: prev.right
    anchors.verticalCenter: prev.verticalCenter
    text-auto-resize: true
    font: poppins-semibold-13
    text: XP
    visible: false
    margin-left: 4
    @onSetup: |
      connect(self:getParent().exp, {
        onVisibilityChange = function(widget, visible)
          self:setVisible(visible)
        end
      })

  UIWidget
