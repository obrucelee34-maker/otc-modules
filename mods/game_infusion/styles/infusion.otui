      image-source: /images/ui/windows/infusion/border_left
      anchors.right: bar.left
      anchors.top: bar.top

    Panel
      id: border_right
      size: 2 4
      image-source: /images/ui/windows/infusion/border_right
      anchors.left: bar.right
      anchors.top: bar.top

    Panel
